<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Counter animation
        function animateCounter(element) {
            const countTo = parseInt(element.dataset.count);
            const duration = 2000; // 2 seconds
            const startTime = performance.now();
            const formatNumber = n => n.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
            
            function update(currentTime) {
                const elapsed = currentTime - startTime;
                const progress = Math.min(elapsed / duration, 1);
                const currentCount = Math.floor(countTo * progress);
                
                element.textContent = formatNumber(currentCount);
                
                if (progress < 1) {
                    requestAnimationFrame(update);
                }
            }
            
            requestAnimationFrame(update);
        }
        
        // Initialize counter animations
        document.querySelectorAll('.count-up').forEach(animateCounter);
        
        // Floating animation for particles
        function createParticles() {
            const particlesContainer = document.querySelector('.image-particles');
            if (!particlesContainer) return;
            
            for (let i = 0; i < 30; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.cssText = `
                    position: absolute;
                    width: ${Math.random() * 6 + 2}px;
                    height: ${Math.random() * 6 + 2}px;
                    background-color: rgba(255, 215, 0, ${Math.random() * 0.5 + 0.3});
                    border-radius: 50%;
                    top: ${Math.random() * 100}%;
                    left: ${Math.random() * 100}%;
                    animation: float-particle ${Math.random() * 4 + 3}s infinite ease-in-out ${Math.random() * 2}s;
                `;
                particlesContainer.appendChild(particle);
            }
        }
        
        // Add keyframes for particle animation
        const styleSheet = document.createElement('style');
        styleSheet.innerHTML = `
            @keyframes float-particle {
                0%, 100% {
                    transform: translateY(0) translateX(0);
                    opacity: 0.3;
                }
                50% {
                    transform: translateY(-${Math.random() * 30 + 10}px) translateX(${Math.random() * 20 - 10}px);
                    opacity: 1;
                }
            }
        `;
        document.head.appendChild(styleSheet);
        
        // Create particles
        createParticles();
        
        // Add hover effects
        const heroImage = document.querySelector('.hero-image-container');
        if (heroImage) {
            heroImage.addEventListener('mouseenter', function() {
                const imageWrapper = this.querySelector('.image-wrapper');
                if (imageWrapper) {
                    imageWrapper.style.transform = 'rotate3d(1, 1, 0, 10deg) scale(1.03)';
                }
            });
            
            heroImage.addEventListener('mouseleave', function() {
                const imageWrapper = this.querySelector('.image-wrapper');
                if (imageWrapper) {
                    imageWrapper.style.transform = 'rotate3d(1, 1, 0, 5deg) scale(1)';
                }
            });
            
            // Add mouse tracking for 3D effect
            heroImage.addEventListener('mousemove', function(e) {
                const imageWrapper = this.querySelector('.image-wrapper');
                if (!imageWrapper) return;
                
                const rect = this.getBoundingClientRect();
                const centerX = rect.left + rect.width / 2;
                const centerY = rect.top + rect.height / 2;
                const moveX = (e.clientX - centerX) / 30;
                const moveY = (e.clientY - centerY) / 30;
                
                imageWrapper.style.transform = `rotate3d(${-moveY}, ${moveX}, 0, 5deg) scale(1.03)`;
            });
        }
        
        // Initialize existing code for filter tabs, course search etc.
        // ... existing code ...
        
        // Initialize filter tabs functionality
        const filterTabs = document.querySelectorAll('.filter-tab');
        const courseCards = document.querySelectorAll('.course-card');
        const searchInput = document.getElementById('courseSearch');
        const coursesGrid = document.querySelector('.courses-grid');
        const gridViewBtn = document.querySelector('.grid-view');
        const listViewBtn = document.querySelector('.list-view');
        
        // فلترة الدورات حسب الفئة
        filterTabs.forEach(tab => {
            tab.addEventListener('click', function() {
                // إزالة الحالة النشطة من جميع التابات
                filterTabs.forEach(t => t.classList.remove('active'));
                
                // تفعيل التاب الحالي
                this.classList.add('active');
                
                // الحصول على الفئة المحددة
                const category = this.getAttribute('data-category');
                
                // تطبيق الفلترة مع تأثير انتقالي
                filterCourses(category);
            });
        });
        
        // البحث في الدورات
        if (searchInput) {
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase().trim();
                filterCoursesBySearch(searchTerm);
            });
        }
        
        // تبديل طريقة العرض: شبكة أو قائمة
        if (gridViewBtn && listViewBtn) {
            gridViewBtn.addEventListener('click', function() {
                setViewMode('grid');
            });
            
            listViewBtn.addEventListener('click', function() {
                setViewMode('list');
            });
        }
        
        // دالة فلترة الدورات حسب الفئة
        function filterCourses(category) {
            courseCards.forEach(card => {
                const cardCategory = card.getAttribute('data-category');
                const searchTerm = searchInput ? searchInput.value.toLowerCase().trim() : '';
                const cardTitle = card.querySelector('.course-title').textContent.toLowerCase();
                
                // تحقق من تطابق الفئة والبحث معًا
                const matchesCategory = category === 'all' || cardCategory === category;
                const matchesSearch = !searchTerm || cardTitle.includes(searchTerm);
                
                if (matchesCategory && matchesSearch) {
                    // إظهار البطاقة مع تأثير انتقالي
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(20px)';
                    
                    setTimeout(() => {
                        card.style.display = 'flex';
                        
                        // تطبيق التأثير الانتقالي بعد لحظة
                        setTimeout(() => {
                            card.style.opacity = '1';
                            card.style.transform = 'translateY(0)';
                        }, 50);
                    }, 50);
                } else {
                    // إخفاء البطاقة مع تأثير انتقالي
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(20px)';
                    
                    setTimeout(() => {
                        card.style.display = 'none';
                    }, 300);
                }
            });
            
            // التحقق من عدم وجود نتائج
            checkNoResults();
        }
        
        // دالة فلترة الدورات حسب البحث
        function filterCoursesBySearch(searchTerm) {
            const activeCategory = document.querySelector('.filter-tab.active')?.getAttribute('data-category') || 'all';
            
            courseCards.forEach(card => {
                const cardCategory = card.getAttribute('data-category');
                const cardTitle = card.querySelector('.course-title')?.textContent.toLowerCase() || '';
                const cardInstructor = card.querySelector('.course-instructor span')?.textContent.toLowerCase() || '';
                
                // البحث في العنوان واسم المدرس
                const matchesSearch = !searchTerm || 
                                     cardTitle.includes(searchTerm) || 
                                     cardInstructor.includes(searchTerm);
                                     
                const matchesCategory = activeCategory === 'all' || cardCategory === activeCategory;
                
                if (matchesSearch && matchesCategory) {
                    // إظهار البطاقة مع تأثير تمييز للكلمات المطابقة
                    card.style.display = 'flex';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                } else {
                    // إخفاء البطاقة
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(20px)';
                    
                    setTimeout(() => {
                        card.style.display = 'none';
                    }, 300);
                }
            });
            
            // التحقق من عدم وجود نتائج
            checkNoResults();
        }
        
        // دالة التحقق من عدم وجود نتائج
        function checkNoResults() {
            if (!courseCards || courseCards.length === 0) return;
            
            let visibleCount = 0;
            
            courseCards.forEach(card => {
                if (card.style.display !== 'none') {
                    visibleCount++;
                }
            });
            
            // إظهار رسالة في حالة عدم وجود نتائج
            let noResultsMsg = document.querySelector('.no-results-message');
            
            if (visibleCount === 0) {
                if (!noResultsMsg) {
                    noResultsMsg = document.createElement('div');
                    noResultsMsg.className = 'no-results-message';
                    noResultsMsg.innerHTML = `
                        <div class="no-courses-content">
                            <i class="fas fa-search"></i>
                            <h3>لا توجد دورات مطابقة للبحث</h3>
                            <p>حاول البحث باستخدام مصطلحات أخرى أو تصفية أخرى.</p>
                        </div>
                    `;
                    coursesGrid?.appendChild(noResultsMsg);
                }
            } else if (noResultsMsg) {
                noResultsMsg.remove();
            }
        }
        
        // دالة تغيير طريقة العرض
        function setViewMode(mode) {
            if (!coursesGrid || !gridViewBtn || !listViewBtn) return;
            
            if (mode === 'grid') {
                coursesGrid.classList.remove('list-view');
                gridViewBtn.classList.add('active');
                listViewBtn.classList.remove('active');
                localStorage.setItem('viewMode', 'grid');
            } else {
                coursesGrid.classList.add('list-view');
                listViewBtn.classList.add('active');
                gridViewBtn.classList.remove('active');
                localStorage.setItem('viewMode', 'list');
            }
        }
        
        // استرجاع الوضع المحفوظ
        const savedViewMode = localStorage.getItem('viewMode');
        if (savedViewMode === 'list' && coursesGrid) {
            setViewMode('list');
        }
        
        // تطبيق الفلترة الأولية عند تحميل الصفحة
        setTimeout(() => {
            const initialCategory = document.querySelector('.filter-tab.active')?.getAttribute('data-category') || 'all';
            if (courseCards && courseCards.length) {
            filterCourses(initialCategory);
            
            // تهيئة حالة الكروت مع تأثير الظهور التدريجي
            courseCards.forEach((card, index) => {
                card.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                
                setTimeout(() => {
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, 100 + (index * 50));
            });
            }
        }, 100);
    });
</script>
@endsection
@endsection